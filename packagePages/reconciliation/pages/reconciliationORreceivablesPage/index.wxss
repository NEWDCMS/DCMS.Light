/* pages/bills/pages/saleBillPage/index.wxss */
.container {
    background-color: #fff;
    padding-bottom: 180rpx;
    font-size: 30rpx;
}

page {
    background: #fff;
}

.maincon-container-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 80rpx;
    background-color: #fff;
    justify-content: space-between;
    padding-right: 30rpx;
    padding-left: 30rpx;
    border-bottom: 1rpx #ddd solid;
}

.maincon-container-item-inner {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 80rpx;
    background-color: #fff;
    justify-content: space-between;
    border-bottom: 1rpx #ddd solid;
}

.maincon-container-item-inner .label {
    color: #999;
    width: 250rpx;
}

.float-container {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 2;
    width: 100%;
    height: 120rpx;
    box-shadow: 9px 4px 0px 0px rgba(155, 193, 185, 0.5);
    background-color: #eee;
}

.float-container-toolbar {
    display: flex;
    width: 100%;
    height: 120rpx;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.float-container-toolbar .left-block
{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.left-block .label
{
    margin-left: 20rpx;
}
.left-block .price
{
    font-weight: bold;
    font-size: 35rpx;
}

.float-container-toolbar .right-block
{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.right-block .button
{
    margin-right: 10rpx;
}

.view-container {
    min-height: 900rpx;
}

.weapp
{
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

}


/* table */

.table {
    width: 90%;
    border-bottom: 1rpx #f3f3f3 solid;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 2rem;
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1rpx #f3f3f3 solid;
}

.thr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
}


.td {
    width: 40%;
    justify-content: center;
    text-align: center;
    font-size: 30rpx;
    color: #989998;
}

.count {
    color: #74c765;
}


.pname {
    text-align: left;
    padding: 20rpx;
}


.th {
    width: 25%;
    justify-content: center;
    display: flex;
    height: 3rem;
    font-size: 30rpx;
    align-items: center;
    box-shadow: 0px 1px 0px 0px #9d9e9b4d;
}

.price {
    color: #53a245;
    font-size: 30rpx;
    text-align: right;
    justify-content: flex-end;
}

.pprice {
    color: #53a245;
    font-size: 30rpx;
    text-align: right;
    justify-content: flex-end;
}
.count
{
    color: #53a245;
    font-size: 30rpx;
    text-align: left;
    justify-content: flex-start;

}
.sprice
{
    color: #53a245;
    font-size: 30rpx;
    text-align: left;
    justify-content: flex-start;
}
.thtitle {
    justify-content: flex-start;
}

.line {
    width: 10rpx;
    height: 28rpx;
    background-color: #3B5998;
    border-radius: 6px;
    margin-left: 0rpx;
    margin-right: 22rpx;
}

.leftMenus {
    background: #fff;
    width: 200rpx;
    height: 100%;
    background: #fff;
    font-size: 30rpx;
    color: #555;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
    padding: 20rpx;
}

.dialogMenus {
    width: 450rpx;

}


.l-title-class-border {
    border-bottom: 1rpx solid #f1f1f1;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}