.container {
    background-color: #fff;
    padding-bottom: 180rpx;
    font-size: 30rpx;
}

page {
    background: #fff;
}


.line {
    background-color: #53a245 !important;
    /* width: 100rpx !important; */
    border-radius: 0 !important;
}

.active {
    color: #ad0e11 !important;
    background-color: #fff !important;
}

.inactive {
    background-color: #fff !important;
    color: #7a7a7a !important;
}



.float-container {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 2;
    width: 100%;
    height: 120rpx;
    box-shadow: 9px 4px 0px 0px rgba(155, 193, 185, 0.5);
    background-color: #eee;
}

.float-container-toolbar {
    display: flex;
    width: 100%;
    height: 120rpx;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.float-container-toolbar .left-block {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.left-block .label {
    margin-left: 20rpx;
}

.left-block .price {
    font-weight: bold;
    font-size: 35rpx;
}

.float-container-toolbar .right-block {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.right-block .button {
    margin-right: 10rpx;
}

.view-container {
    min-height: 900rpx;
}


.leftMenus {
    background: #fff;
    width: 200rpx;
    height: 100%;
    background: #fff;
    font-size: 30rpx;
    color: #555;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
    padding: 20rpx;
}

.dialogMenus {
    width: 450rpx;

}


.l-title-class-border {
    border-bottom: 1rpx solid #f1f1f1;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.items {
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
    padding-bottom: 10rpx;
    box-shadow: 0px 1px 0px 0px #9d9e9b4d;
}

.items-column {
    display: flex;
    width: 100%;
    line-height: 3em;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.items-column-left {
    margin-left: 20rpx;
}

.items-column-right {
    margin-right: 20rpx;
}

.tname {
    font-weight: bold;
    font-size: 30rpx;
}

.label {
    color: rgb(167, 164, 164);
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}