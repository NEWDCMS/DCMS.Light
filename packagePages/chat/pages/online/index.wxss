page{
    background: #fff;
}
.container {
    align-items: center;
    background-color: #fff;
}

.content {
    width: 100%;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    flex-direction: row;
    align-items: center;
}


.img {
    margin-left: 0rpx;
    margin-right: 50rpx;
}

.line {
    height: 1rpx;
    width: 100%;
    background-color: #ddd;
    margin: 20rpx 0 0rpx 0;
}

.des {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 10rpx 0 10rpx 0;
}

.des-title {
    font-size: 30rpx;
    flex-wrap: wrap;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.des-mobile {
    font-size: 30rpx;
    font-weight: bold;
}

.light
{
    color: #53a245;     
}
.gry
{
    color: #bbb;     
}