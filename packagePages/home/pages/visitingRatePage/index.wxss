/* table */

.table {
    border: 0px solid darkgray;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 4rem;
    align-items: center;
}

.th {
    width: 100%;
    background: #eee;
    display: flex;
    height: 3rem;
    font-size: 30rpx;
    align-items: center;
    box-shadow: 0px 2px 0px 0px #9d9e9b4d;
}

.thr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
}

.td {
    width: 100%;
    justify-content: center;
    text-align: center;
    font-size: 30rpx;
}


.td {
    width: 100%;
    justify-content: center;
    text-align: center;
    font-size: 30rpx;
}


.pleft {
    width: 33.3%;
    text-align: left;
    padding-left: 20rpx;
    justify-content: flex-start;
}

.pmid {
    width: 33.3%;
    text-align: center;
    justify-content: center;
}

.pright {
    width: 33.3%;
    text-align: right;
    padding-right: 20rpx;
    justify-content: flex-end;
}

.bg-w {
    background: snow;
}

.bg-g {
    background: #eee;
}