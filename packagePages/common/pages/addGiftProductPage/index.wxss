page {
    height: 100%;
    background-color: #fff;
}
.container {
    padding-bottom: 160rpx;
}

.gift-box {
    background: #fff;
    border-radius: 10rpx;
    padding: 0rpx;
    margin: 20rpx;
    box-shadow: 0px 2px 6px 0px rgba(155, 193, 185, 0.5);
}

.gift-box .gift-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 3em;
    font-size: 30rpx;
    
    padding: 20rpx 20rpx;
    border-bottom: 1px #ddd solid;
}

.gift-header .name{
    width: 65%;
    font-weight: bold;
}
.gift-header .counter{
    width: 35%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.gift-box .gift-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.buy-flag,
.gift-flag
{
    display: flex;
    width: 10%;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 6em;
}

.buy-flag
{
    background: #3B5998;
}

.gift-flag
{
    background: #53a245;
    border-radius: 0rpx 0rpx 0rpx 10rpx;
}


.buy-box-product {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 90%;
    margin: 20rpx;
    border-bottom: 1px #eee solid;
}

.buy-box-product-top {
    font-size: 30rpx;
    text-align: left;
    height: 2em;
    width: 100%;
    border-bottom: 1px #eee solid;
}

.buy-box-product-bot {
    width: 100%;
    text-align: left;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.tool-box {
    text-align: center;
    align-items: center;
    margin: 20rpx 20rpx 30rpx 20rpx;
}

.line {
    background: #E0E3DA;
    width: 100%;
    margin-top: 10rpx;
    height: 1rpx;

}

.float-container {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 130rpx;
    box-shadow: 9px 4px 0px 0px rgba(155, 193, 185, 0.5);
    background-color: #eee;
    z-index: 2;
}
