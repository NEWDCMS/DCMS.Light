/* pages/common/pages/addProductPage/index.wxss */

/* table */

.table {
    border: 0px solid darkgray;
    background-color: #fff;
}

.remarkDown {
    /* margin-left: 14rpx; */
    margin-right: 10rpx;
    display: block;
    /* font-size: 26rpx; */
    color: #999;
    /* line-height: 26rpx; */
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
}


.tr {
    display: flex;
    width: 100%;
    justify-content: space-between;
    height: 3rem;
    align-items: center;
    border-bottom: 1rpx rgba(155, 193, 185, 0.5) solid;
}

.trtext {
    height: 2.5rem;
}

.thr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;

}

.td {
    width: 100%;
    display: flex;
    justify-content: space-between;
    text-align: center;
    font-size: 30rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    align-items: center;
}

.gift {
    color: #53a245;
}

.pname {
    text-align: left;
    padding: 20rpx;
}



.remark {
    width: 30%;
}

.bg-w {
    background: snow;
}

.bg-g {
    background: #eff2f3;
}

.th {
    width: 40%;
    justify-content: center;
    background: #eee;
    /* color: #fff; */
    display: flex;
    height: 3rem;
    font-size: 30rpx;
    align-items: center;
    /* border-bottom: 2rpx rgba(155, 193, 185, 0.5) solid; */
    box-shadow: 0px 2px 0px 0px #9d9e9b4d;
}

.footer {
    color: rgb(185, 178, 178);
}

.float-container {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 2;
    width: 100%;
    height: 120rpx;
    box-shadow: 9px 4px 0px 0px rgba(155, 193, 185, 0.5);
    background-color: #fff;
    /* display: flex;
    justify-content: center;
    align-items: center; */
}

.float-container-header text {
    margin-left: 30rpx;
    color: rgb(56, 55, 55);
}

.float-container-toolbar {
    padding: 10rpx;
}