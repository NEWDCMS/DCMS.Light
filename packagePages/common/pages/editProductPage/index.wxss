/* table */

.table {
    border: 0px solid darkgray;
    background-color: #fff;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 4rem;
    align-items: center;
    border-bottom: 1rpx rgba(155, 193, 185, 0.5) solid;
}


.td {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    text-align: start;
    font-size: 30rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.td label {
    width: 100rpx;
}

.td input {
    width: 500rpx;
}

.remark {
    width: 20%;
}

.bg-w {
    background: snow;
}

.bg-g {
    background: #eff2f3;
}

.th {
    width: 40%;
    justify-content: center;
    background: #eee;
    /* color: #fff; */
    display: flex;
    height: 3rem;
    font-size: 30rpx;
    align-items: center;
    /* border-bottom: 2rpx rgba(155, 193, 185, 0.5) solid; */
    box-shadow: 0px 2px 0px 0px #9d9e9b4d;
}

.footer {
    color: rgb(185, 178, 178);
}

.float-container {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 2;
    width: 100%;
    height: 120rpx;
    box-shadow: 9px 4px 0px 0px rgba(155, 193, 185, 0.5);
    background-color: #fff;
    /* display: flex;
    justify-content: center;
    align-items: center; */
}

.float-container-header text {
    margin-left: 30rpx;
    color: rgb(56, 55, 55);
}

.float-container-toolbar {
    padding: 10rpx;
}