/* pages/bills/pages/saleBillPage/index.wxss */
.container {
    background-color: #fff;
    padding-bottom: 180rpx;
    font-size: 30rpx;
}

page {
    background: #fff;
}


.float-container {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 2;
    width: 100%;
    height: 100rpx;
    box-shadow: 9px 4px 0px 0px rgba(155, 193, 185, 0.5);
    background-color: #eee;
}

.float-container-toolbar {
    display: flex;
    width: 100%;
    height: 100rpx;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.float-container-toolbar .left-block {
    width: 50%;
    height: 100rpx;
    color: #3B5998;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}


.float-container-toolbar .right-block {
    width: 50%;
    height: 100rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    background: #3B5998;
    display: flex;
    align-items: center;
    justify-content: center;
}


.list-box {
    padding: 10rpx 0rpx;
}

.list-box .list-box-item {
    width: 100%;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px #f3f3f3 solid;
    padding-left: 15rpx;
    padding-right: 15rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.list-box-item-left {
    display: flex;
    align-items: center;
    padding-left: 10rpx;
    justify-content: center;
}

.list-box-item-left text {
    font-size: 28rpx;
    color: #000;
}

.list-box-item .button {
    width: 15%;
    display: flex;
    align-items: flex-end;
    padding-left: 10rpx;
    justify-content: center;
}

.district-name-text{
    margin-left: 40rpx;
    width: 500rpx;
}