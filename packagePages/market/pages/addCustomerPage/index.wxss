/* pages/market/pages/addCustomerPage/index.wxss */
.container {
  padding-bottom: 50rpx;
  background-color: white;

}
.share-box {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
   box-shadow: 0px 1px 8px 0px rgba(220, 220, 220, 0.5); 
}

.buttun-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.l-radio {
  padding-left: 40rpx;
  box-sizing: border-box;
  color: rgba(140, 152, 174, 1) !important;
}

/* -------- */

.avatar-container-box {
  padding: 50rpx;
}

.add{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #eee;
  justify-content: center;
}

.add-icon {
  height: 70rpx;
  width: 70rpx;
  margin-top: 10rpx;
}

.add-text {
  margin-top: 6rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #bfbfbf;
}

.l-form-btn-class{
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
}
